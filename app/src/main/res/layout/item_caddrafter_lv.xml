<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_cadDrafterItem_headPortrait"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tv_cadDrafterItem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_cadDrafterItem_headPortrait"
            android:text="test" />

        <TextView
            android:id="@+id/tv_cadDrafterItem_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_cadDrafterItem_headPortrait"
            android:layout_toRightOf="@id/iv_cadDrafterItem_headPortrait"
            android:layout_below="@id/tv_cadDrafterItem_name"
            android:text="test" />

    </RelativeLayout>

</LinearLayout>