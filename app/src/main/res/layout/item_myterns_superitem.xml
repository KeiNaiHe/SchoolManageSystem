<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center_vertical"
    android:minHeight="70dp">

    <ImageView
        android:id="@+id/iv_myTernsSuper_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:src="@mipmap/ic_launcher_round" />


    <TextView
        android:id="@+id/tv_myTernsSuper_descript"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/iv_myTernsSuper_photo"
        android:layout_toRightOf="@id/iv_myTernsSuper_photo"
        android:text="张三"
        android:textColor="#628"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/iv_myTernsSuper_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:src="@mipmap/less_desc" />

</RelativeLayout>